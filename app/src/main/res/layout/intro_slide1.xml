<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAF8F9"
    tools:context="id.baperan.baper.IntroApp">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_hearts"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/slide_title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kamu Kangen?"
        android:textColor="#D9472B"
        android:textSize="24dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@id/img1"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/slide_desc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Orang yang kamu SAYANG?"
        android:textColor="#E6563A"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_below="@id/slide_title1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        />

</RelativeLayout>
